@model IEnumerable<Project59.Models.Taikhoan>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<p>
    <a asp-action="Create" class="btn btn-success m-r-5">Thêm mới</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Họ tên
            </th>
            <th>
                Trạng thái
            </th>
            <th>
                Mô tả
            </th>
            <th>
                User
            </th>
            <th>
                Password
            </th>
            <th>
                Quyền 
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Hoten)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Trangthai)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Mota)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Taikhoan1)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Matkhau)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Role.RoleId)
            </td>
            <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary m-r-5">Sửa</a> 
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-secondary m-r-5">Xem</a> 
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger m-r-5">Xóa</a>
            </td>
        </tr>
}
    </tbody>
</table>
